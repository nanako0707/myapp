<body class="login-page" style="background-image: url('/assets/img/pattern/pattern1.png');">

  <div class="container mt-5">
    <div class="row">
      <div class="col-lg-7 col-xl-8 d-none d-lg-block">
        <img src="/assets/img/forgot-password.svg" alt="" class="img-fluid w-100">
      </div>
      <div class="col-lg-5 col-xl-4 d-flex justify-content-center align-items-center">
        <div class="card mb-3">
          <div class="card-body p-4">
            <h3><%= t('.change_your_password') %></h3>
            <p class="font-weight-light text-secondary">新しいパスワードを入力してください</p>
            <hr>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="form-group">
                <%= f.label :password, t('.new_password'), {class: "font-size-sm", for: "InputPassword"} %><br />
                <% if @minimum_password_length %>
                  <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control bg-gray-200 border-gray-200", id: "InputPassword", placeholder: "6文字以上で入力してください" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, t('.confirm_new_password'), {class: "font-size-sm", for: "InputPassword"} %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-gray-200 border-gray-200", id: "InputPassword", placeholder: "" %>
              </div>

              <div class="actions">
                <%= f.submit t('.change_my_password'), class: "btn btn-danger btn-block" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Plugins -->
  <!-- JS plugins goes here -->

</body>