<body class="login-page">
  <div class="container mt-5">
    <div class="row">
      <div class="col-lg-7 col-xl-8 d-none d-lg-block">
        <img src="/images/img/register.svg" alt="" class="img-fluid w-100">
      </div>
      <div class="col-lg-5 col-xl-4 d-flex justify-content-center align-items-start">
        <div class="card mb-3">
          <div class="card-body p-4">
            <h3><%= t('.title', resource: resource.model_name.human) %></h3>
            <hr>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group">
                <%= f.label :name, {class: "font-size-sm", for: "InputFullname"} %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control bg-gray-200 border-gray-200", id: "InputFullname", placeholder: "フルネームで入力してください", autocomplete: "off" %>
              </div>
              <div class="form-group">
                <%= f.label :email, {class: "font-size-sm", for: "InputEmail"} %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control bg-gray-200 border-gray-200", id: "InputEmail", placeholder: "", autocomplete: "off" %>
              </div>

               <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
              <% end %>

              <div class="form-group">
                <%= f.label :password, {class: "font-size-sm", for: "InputPassword"} %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-gray-200 border-gray-200", id: "InputPassword", placeholder: "" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
                <% end %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, {class: "font-size-sm", for: "InputPassword"} %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-gray-200 border-gray-200", id: "InputPassword", placeholder: "" %>
              </div>

              <div class="form-group">
                <%= f.label :current_password , {class: "font-size-sm", for: "InputPassword"} %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control bg-gray-200 border-gray-200", id: "InputPassword", placeholder: "" %>
              </div>

              <div class="actions">
                <%= f.submit t('.update'), class: "btn btn-primary btn-block" %>
              </div>
            <% end %>
            <br>

              <h3><%= t('.cancel_my_account') %></h3>

              <p><%= t('.unhappy') %> <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: "btn btn-danger" %></p>

              <%= link_to t('devise.shared.links.back'), :back %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
